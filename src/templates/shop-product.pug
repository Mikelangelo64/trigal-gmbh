-
  const productInfo = {
    typography: `
      <p>
        Универсальный аккумуляторный перфоратор SDS plus для сверления и забивания молотков в бетоне и каменной кладке. С большой площадью сверления, функцией рубки и быстросменной сверлильной головкой (аккумуляторная платформа Nuron). Встроенный пылеотвод обеспечивает сверление практически без пыли.
      </p>
    `,
    radio: [
      {
        term: 'В день',
        price: '€ 18',
      },
      {
        term: '2-3 дня',
        price: '€ 20',
      },
      {
        term: '4-5 дней',
        price: '€ 30',
      },
      {
        term: '1 неделя',
        price: '€ 40',
      },
    ],
    gallery: [
      '@/assets/img/shop/product/product-1.jpg',
      '@/assets/img/shop/product/product-2.jpg',
      '@/assets/img/shop/product/product-3.jpg',
    ],
  };

section.shop-product.section.section-shop.first-section
  .section-bg
    .section-bg-lines
      .section-bg-lines__item
      .section-bg-lines__item
      .section-bg-lines__item
      .section-bg-lines__item

  ._container.section__container
    .shop-product__wrapper
      .shop-product__header.section-header
        h1.section-header__title Электрический компрессор, 125 л.

      .shop-product__main
        .shop-product__media
          .shop-product-gallery-slider.slider.swiper
            .swiper-wrapper
              each item, index in productInfo.gallery 
                .swiper-slide
                  a.shop-product-gallery-slider__item(
                    href=require(`${item}`),
                    data-fancybox='shop-product-gallery-0'
                  )
                    span.shop-product-gallery-slider__media
                      span.shop-product-gallery-slider__media__container
                        img(
                          src=require(`${item}`),
                          alt=`product-gallery-${index + 1}`,
                          loading='lazy'
                        )

          .shop-product-gallery-slider-controls.slider-controls
            .shop-product-gallery-slider-pagination.slider-pagination

        .shop-product__content
          p.shop-product__content__vendor ID: 252521

          .shop-product__typography.typography!= productInfo.typography

          .shop-product-radio
            p.shop-product-radio__title Цена (Плюс НДС.)

            ul.shop-product-radio__list
              each item, index in productInfo.radio
                li
                  label.shop-product-radio__item(for=`option-${index + 1}`)
                    if index === 0
                      input.shop-product-radio__input(
                        id=`option-${index + 1}`,
                        type='radio',
                        name='option',
                        checked
                      )
                    else
                      input.shop-product-radio__input(
                        id=`option-${index + 1}`,
                        type='radio',
                        name='option'
                      )

                    .shop-product-radio__info
                      .shop-product-radio__term= item.term
                      .shop-product-radio__price= item.price

          a.shop-product__button.button-filled(href='#')
            span Забронировать
