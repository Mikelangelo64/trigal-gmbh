.popup-action
  p.popup-action__title Please fill out the form and we will contact you shortly.

  .popup-action__main
    form#form-popup.form.popup-action__form(action='post') 
      //- div
      //-   label(for='popup-select') 
      //-     strong Тип звернення
      //-     select#popup-select(name='select', form='form-popup')
      //-       option(value='value 1', selected) value 1
      //-       option(value='value 2') value 2
      //-       option(value='value 3') value 3
      //-     span.wpcf7-not-valid-tip Невірний формат

      div
        label(for='popup-name') 
          strong Name
          input#popup-name(type='text', name='name', placeholder='Your name')
          span.wpcf7-not-valid-tip Wrong format

      div
        label(for='popup-email') 
          strong Email
          input#popup-email(
            type='email',
            name='email',
            placeholder='Your email'
          )
          span.wpcf7-not-valid-tip Wrong format

      div
        label(for='popup-telephone') 
          strong Phone number
          input#popup-telephone(
            type='tel',
            name='telephone',
            placeholder='Your phone number'
          )
          span.wpcf7-not-valid-tip Wrong format

      div
        label(for='popup-request') 
          strong Your request
          textarea#popup-request(name='request', placeholder='Message text')
          span.wpcf7-not-valid-tip Wrong format

      p
        button(type='submit') Send
